<%- include('_header') %>

<h1>Sign Up Page</h1>

<div class="col-md-3 col-md-offset-3">
  <form class="form-horizontal" action='/sign_up' method='post'>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <input type="email" required="required" class="form-control" id="inputEmail3" name="email" placeholder="Email">
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <input pattern=".{6,18}" type="password" required="required" class="form-control" id="password" name="password" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
      <label for="comfirn_password" class="col-sm-2 control-label">Comfirn Password</label>
      <div class="col-sm-10">
        <input pattern=".{6,18}" oninput="check(this)" type="password" required="required" class="form-control" id="comfirn_passwd" name="confirm_password" placeholder="Comfirn Password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Sign Up</button>
      </div>
    </div>
  </form>
</div>

<script language='javascript' type='text/javascript'>
    function check(input) {
        if (input.value != document.getElementById('password').value) {
            input.setCustomValidity('Password Must be Matching.');
        } else {
            // input is valid -- reset the error message
            input.setCustomValidity('');
        }
    }
</script>

